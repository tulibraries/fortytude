<div id="site-footer">
  <div class="container">
  <div class="row social">
    <div class="col-12 col-lg-7 px-0">
      <% unless @donate_link.nil? %>
        <%= link_to image_tag("give_button.png", alt: "Support the Libraries"), @donate_link, class: "donate", title: "Giving and Gifts in Kind page" %>
      <% end %>
    </div>
    <div class="col-12 col-lg-5 text-left text-lg-right px-0 social-link">
      <% unless @social_links.nil? %>
      <ul>
        <%= link_to @social_links do %>
        <li class="social-footer instagram">
          <%= image_tag('instagram-logo_white.svg', alt: "instagram logo") %>
        </li>
        <li class="social-footer facebook">
          <%= image_tag('facebook-logo_white.svg', alt: "facebook logo") %>
        </li>
        <li class="social-footer twitter">
          <%= image_tag('twitter-logo_white.svg', alt: "twitter logo") %>    
        </li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>

  <div class="tu-links">
      <div class="row">
        <div class="col-12 col-lg-6 px-0">
          <div class="row">
            <div class="col px-0">
              <h2>Quick Links</h2>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-lg-4 px-0">
              <ul class="list-unstyled">
                <% unless @ezborrow_link.nil? %>
                <li><%= link_to "E-Zborrow", @ezborrow_link.link %></li>
                <% end %>
                <% unless @jobs_link.nil? %>
                <li><%= link_to "Jobs", page_path(@jobs_link) %></li>
                <% end %>
                <% unless @standards_link.nil? %>
                <li><%= link_to "Community Standards", @standards_link %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-12 col-lg-3 px-0">
              <ul class="list-unstyled">
                <% unless @illiad_link.nil? %>
                <li><%= link_to "ILLiad", @illiad_link.link %></li>
                <% end %>
                <% unless @publications_link.nil? %>
                <li><%= link_to "Publications", page_path(@publications_link) %></li>
                <% end %>
                <% unless @diversity_link.nil? %>
                <li><%= link_to "Diversity Statement", @diversity_link %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-12 col-lg-5 px-0">
              <ul class="list-unstyled">
                <% unless @refworks_link.nil? %>
                <li><%= link_to "RefWorks", @refworks_link.link %></li>
                <% end %>
                <% unless @privacy_link.nil? %>
                <li><%= link_to "Virtual Reference Privacy Guidelines", @privacy_link %></li>
                <% end %>
                <li><%= link_to "Temple University homepage", "http://temple.edu" %></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-6 px-0">
          <div class="row">
            <div class="col-12 col-lg-4 offset-lg-8 px-0 address">
              <p>
              Temple University Libraries<br />
              1900 N. 13th Street<br />
              Philadelphia, PA 19122<br />
              (215) 204-8231
              </p>
              <% unless @numbers_link.nil? %>
              <p><%= link_to "Frequently Called Numbers", page_path(@numbers_link) %></p>
              <% end %>
              <p><%= link_to "Staff Directory", people_path %></p>
              <p><%= link_to "Library Organizational Charts", "https://tulibdev.atlassian.net/wiki/spaces/LPC/pages/1041203284/Library+Org+Chats" %></p>
              <p><%= link_to "Staff Forms", "https://tulibdev.atlassian.net/wiki/spaces/LSF/overview", target: "_blank" %></p>
            </div>
          </div>
        </div>
    </div>
  </div>

<!-- float right -->


</div>
</div>