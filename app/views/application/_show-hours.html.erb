<% unless @location.nil? %>
<div class="current-week">
	<% @locations.each do |location| %>
  <% if location[:slug] == @location || location[:spaces].first[0].nil? %>

  <div class="row"> <!-- begin dates header -->
    <div class="col-4"><h2>Weekly Hours</h2></div>
      <div class="col-md-8 text-right">
        <%= link_to "See More Hours for this location", hours_path, class: "today_button"  %>
      </div>
    </div>
  </div>
  <div class="row hours-header">
    <div class="col-3">
      <span class="month hours-month-name">
        <%= @today.to_date.strftime("%B %Y") %>
      </span>
    </div>

      <div class="col-9">
        <div class="row">
        <% 7.times do |date| %>
          <% if @monday.to_date+date == @today.to_date %>
            <div class="col hours-dates today day-of-week text-center">
          <% else %>
            <div class="col hours-dates text-center">
          <% end %>
              <%= (@monday.to_date+date).strftime("%a %d") %> 
            </div>
        <% end %>
        </div>
      </div>

    </div> <!-- end dates header -->


  <% unless @hours_type == "space" %>

   <% unless location.values.second.first.second.empty? %>

    <% location.values.second.each do |hours| %>
      <div class="row" style="margin-top: 14px;"> 

        <div class="col-3 text-right"> 
          <h3>
            <%= location_name(hours.second.first.location_id) %>
          </h3>
        </div>
        <div class="col-9">
          <div class="row">
          <% hours.second.each_with_index do |time,index| %> 

            <% if @monday.to_date+index == @today.to_date %>
              <div class="col today">
              <% else %>
              <div class="col">
            <% end %>

              <% if time.hours.downcase == "closed" %>
                <span class="closed"><%= time.hours %></span>
              <% else %>
                <%= time.hours %>
              <% end %>

              </div>

            <% end %> <!-- time,index -->
          </div>
        </div>

      </div> 
    <% end %>
    <% else %>
      <div class="row" style="margin-top: 14px;">
        <div class="col-12 text-center">
          <h3>No data for current date range</h3>
        </div>
      </div> 
    <% end %>

  <% else %> <!-- it's a space -->

  <% unless location.values.second[1][1].first.hours.empty? %>

    <div class="row" style="margin-top: 14px;">

      <div class="col-3 text-right"> 
        <h3>
          <%= location_name(@location) %>
        </h3>
      </div>

      <div class="col-9">
        <div class="row">
        <% location.values.second[1][1].each_with_index do |time,index| %> <!-- time index -->

          <% if @monday.to_date+index == @today.to_date %>
            <div class="col today">
            <% else %>
            <div class="col">
          <% end %>

          <% if time.hours.downcase == "closed" %>
            <span class="closed"><%= time.hours %></span>
          <% else %>
            <%= time.hours %>
          <% end %>
            </div>

          <% end %> <!-- time index -->
        </div>
      </div>
    </div> 

  <% else %>
    <div class="row" style="margin-top: 14px;">
      <div class="col-12 text-center">
        <h3>No data for current date range</h3>
      </div>
    </div>
  <% end %>

<% end %>

<% end %>

<% end %> <!-- @locations.each -->
</div> <!-- current week -->
<% end %> <!-- location is not nil -->
