<% @categories.each do |cat| %>
  <div class="leftside-index">
    <div class="index-category">
      <h2><%= cat.name %></h2>
    </div>
    <div class="index-items">
      <div>
        <ul class="list-unstyled">
          <% cat.items.each do |c| %>
            <% if c == @service %>
            <li class="selected">
            <% else %>
            <li>
            <% end %>
              <%= link_to c.title, service_path(c) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
    


