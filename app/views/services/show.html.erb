<div class="row">
  <div class="col breadcrumbs">
    <%= link_to "Home", root_path.to_s %>
    <%= link_to "Services", services_path %>
    <%= @service.title %>
  </div>
</div>

<div class="row ctaRow service-show">
  <div class="col-3 text-right">
  <% unless @grouped_services.blank? %>
    <div class="card ctaFirst">
      <div class="card-title">All Services</div>
      <div class="card-body">
        <%= render "all_services" %>
      </div>
    </div>
  </div>
  <div class="col-6">
    <% else %>
  <div class="col-8 offset-1">
    <% end %>
    <h2 class="unstyled"><%= @service.title %></h2>
    <%= sanitize @service.description.html_safe %>
    <% unless @service.access_description.blank? %>
      <h3>Access Description:</h3>
      <%= sanitize @service.access_description.html_safe %>
    <% end %>
    <% unless @service.access_link.blank? %>
      <h3>Access Link:</h3>
      <p><%= link_to @service.title, strip_tags(@service.access_link) %></p>
    <% end %>
    <% unless @service.service_policies.blank? %>
      <h3>Service Policies:</h3>
      <%= sanitize @service.service_policies.html_safe %>
    <% end %>
  </div>
  <div class="col-3 text-left">
    <div class="card ctaLast">
      <div class="card-title">
        Hours
      </div>
      <div class="card-body text-center">
        <p><strong><%= @service.todays_date.strftime("%A, %B %d, %Y") %></strong></p>
        <% unless @service.hours.blank? %>
          <p><%= @service.todays_hours %></p>
          <p><%= link_to "see service hours >", hours_path(@service.hours) %></p>
        <% else %>
          <p>This service does not have hours</p>
          <p><%= link_to "see all hours >", hours_path %></p>
        <% end %>
      </div>
    </div>
    <%= render "related_spaces" %>
    <%= render "related_policies" %>
    <%= render "related_groups" %>
  </div>
</div>


