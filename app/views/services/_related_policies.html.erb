<div class="container service-policies">
  <div class="row">
    <div class="col">
      <% unless @service.policies.blank? %>
        <div class="row groupsRow">
          <% @service.policies.in_groups_of(3).each do |policy| %>
            <% unless @service.policies.size < 3 %>
            <div class="col-md-1"></div>
              <div class="col-sm-10 offset-sm-1 col-md-3 offset-md-1 m-2 cta first">
                <div class="group">
                  <%= link_to policy.first.name, policy_path(policy.first) %>
                </div>
              </div>
              <% unless policy.second.nil? %>
                <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta">
                  <div class="group">
                      <%= link_to policy.second.name, policy_path(policy.second) %>
                  </div>
                </div>
              <% end %>
              <% unless policy.third.nil? %>
                <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta last">
                  <div class="group">
                      <%= link_to policy.third.name, policy_path(policy.third) %>
                  </div>
                </div>
              <% end %>

            <div class="col-md-1"></div>
            <% end %>

            <% if @service.policies.size == 2 %>
            <div class="col-md-2"></div>
              <div class="col-md-4 offset-md-2 m-2 cta first">
                <div class="group">
                  <%= link_to policy.first.name, policy_path(policy.first) %>
                </div>
              </div>
              <div class="col-md-4 m-2 cta last">
                <div class="group">
                  <%= link_to policy.second.name, policy_path(policy.second) %>
                </div>
              </div>
              <div class="col-md-1"></div>
            <% end %>

            <% if  @service.policies.size == 1  %>
              <div class="col-xs-6 offset-xs-3 col-md-4 offset-md-4 cta both">
                <div class="group">
                 <%= link_to policy.first.name, policy_path(policy.first) %>
                </div>
              </div>
            <% end %>

          <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>