<div class="container service-groups">
  <div class="row">
    <div class="col">
      <% unless @service.related_groups.nil? %>
        <div class="row groupsRow">
          <% @service.related_groups.in_groups_of(3).each do |group| %>
            <% unless @service.related_groups.size < 3 %>
            <div class="col-md-1"></div>
              <div class="col-sm-10 offset-sm-1 col-md-3 offset-md-1 m-2 cta first">
                <div class="group">
                  <%= link_to group.first.name, group_path(group.first) %>
                </div>
              </div>
              <% unless group.second.nil? %>
                <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta">
                  <div class="group">
                      <%= link_to group.second.name, group_path(group.second) %>
                  </div>
                </div>
              <% end %>
              <% unless group.third.nil? %>
                <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta last">
                  <div class="group">
                      <%= link_to group.third.name, group_path(group.third) %>
                  </div>
                </div>
              <% end %>

            <div class="col-md-1"></div>
            <% end %>

            <% if @service.related_groups.size == 2 %>
            <div class="col-md-2"></div>
              <div class="col-md-4 offset-md-2 m-2 cta first">
                <div class="group">
                  <%= link_to group.first.name, group_path(group.first) %>
                </div>
              </div>
              <div class="col-md-4 m-2 cta last">
                <div class="group">
                  <%= link_to group.second.name, group_path(group.second) %>
                </div>
              </div>
              <div class="col-md-1"></div>
            <% end %>

            <% if  @service.related_groups.size == 1  %>
              <div class="col-xs-6 offset-xs-3 col-md-4 offset-md-4 cta both">
                <div class="group">
                 <%= link_to group.first.name, group_path(group.first) %>
                </div>
              </div>
            <% end %>

          <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>