<% unless @categories.blank? %>
<div class="row d-block d-md-block d-lg-none" id="services-mobile-nav">
  <div id="mobile-menu-button" onclick="toggle('secondary')">
  <nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#services-mobile-menu" aria-controls="services-mobile-menu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon" id="sub-toggler-icon">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </span>
      <span class="navbar-brand">
        <% @categories.each do |i| %>
          <%= i.name %> 
        <% end %> Menu</span>
    </button>
    <div class="collapse navbar-collapse" id="services-mobile-menu">
      <div class="navbar-nav"> 
         <%= render "all_services" %>
      </div>
    </div>
  </nav>
  </div>
</div>
<% end %>