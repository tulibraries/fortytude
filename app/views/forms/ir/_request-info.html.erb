<% 
incident_types = ["Vandalism", "Accident/Medical","Theft", "Harassment/Fight/Abusive Language","Building Issue", "Other"]
action_taken = ["Library Administration Notified","Facilities Notified (1-1385)","Completed Staff Injury Report","Referred to Legal or Risk Management","Called Campus Police"]
%>

<fieldset class="form-section">
	<legend>Staff Member Submitting Form</legend>
	<%= f.input :name, label: "Name", required: :true %>
	<%= f.input :email, label: "Email", required: :true %>
	<%= f.input :department, label: "Department", required: :true %>
</fieldset>

<fieldset class="form-section">
	<legend>Incident Details</legend>
	<%= f.input :type_of_incident, as: :radio_buttons, label: "Type of Incident", collection: incident_types, wrapper_html: { class: "form_affiliation" }, required: :true %>
	<%= f.input :other_incident, label: false, placeholder: "specify other...", wrapper_html: { class: "specify-other" } %>
	<%= f.input :date_of_incident, label: "Time/Date of Incident", as: :datetime, start_year: Date.today.year-1, end_year: Date.today.year, ampm: true, minute_step: 5, order: [:month, :day, :year], required: :true %>
	<%= f.input :location_where_incident_occurred, label: "Location Where Incident Occurred", required: :true %>
	<%= f.input :incident_description, label: "Incident Description", as: :text, required: :true, input_html: { cols: 60, rows: 5 }, hint: "What happened?  Provide names, who did what to whom, what was stolen, etc. Be as detailed as possible. Describe a suspect if appropriate." %>

	<fieldset class="form-section">
		<legend>Persons Involved, if needed</legend>
		<%= f.input :primary_relevant_person, label: "Primary Relevant Person" %>
		<%= f.input :primary_email, label: "Provide Email" %>
		<%= f.input :primary_affiliation, label: "Affiliation", as: :select, collection: Rails.configuration.affiliation %>
		<hr />
		<%= f.input :secondary_relevant_person, label: "Secondary Relevant Person" %>
		<%= f.input :secondary_email, label: "Provide Email" %>
		<%= f.input :secondary_affiliation, label: "Affiliation", as: :select, collection: Rails.configuration.affiliation %>
	</fieldset>
</fieldset>

<%= f.input :victim_complainant_statement, label: "Victim/Complainant Statement", as: :text, input_html: { cols: 60, rows: 5 } %>
<%= f.input :action_taken, label: "Action Taken", as: :select, collection: action_taken, label: "Action Taken", name: "action", required: :true, hint: "Select all that apply. Hold [Ctrl] or [command] and click more than one if needed. Provide police report # if available.", input_html: { multiple: true, size: 5 } %>
<%= f.input :other_action_taken, as: :text, label: "Other Action Taken" %>
<%= f.input :police_report_number, label: "Police Report Number"%>
<%= f.input :supervisor_notified, as: :radio_buttons, required: :true %>
