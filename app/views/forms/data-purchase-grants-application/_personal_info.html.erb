<%= f.input :name, label: t("manifolds.forms.fields.name"), required: true %>
<%= f.input :email, label: t("manifolds.forms.fields.email"), as: :email, required: true %>
<%= f.input :phone, as: :tel, label: t("manifold.forms.fields.phone_number"), required: true %>
<%= f.input :tu_id, label: t("manifold.forms.fields.tu_id"), required: true %>
<%= f.input :department, label: t("manifolds.forms.fields.department"), required: true %>
<%= f.input :affiliation, as: :radio_buttons, 
            label: t("manifold.forms.fields.temple_affiliation_label"), 
            collection: t("manifold.forms.fields.temple_affiliation_array").map{ |k,v| v }, 
            required: true %>
		