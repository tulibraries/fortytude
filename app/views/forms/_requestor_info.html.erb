<%= field_set_tag 'Your Information' do %>

  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:name, "Name: ") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:name, "", :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:email, "Email: ") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:email,'', :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:tuid, "Temple ID Number: ") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:tuid,'', :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:phone, "Phone: ") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:phone,'', :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:affiliation, "Temple Affiliation: ") %>
    </div>
    <div class="col col-md-9 col-12">
      <div class="field">
        <%= radio_button_tag(:affiliation, "faculty") %>
        <%= label_tag(:affiliation, "Faculty") %>
        <%= radio_button_tag(:affiliation, "staff") %>
        <%= label_tag(:affiliation, "Staff") %>
        <%= radio_button_tag(:affiliation, "graduate") %>
        <%= label_tag(:affiliation, "Graduate") %>
        <%= radio_button_tag(:affiliation, "undergrad") %>
        <%= label_tag(:affiliation, "Undergraduate") %>
      </div>
  </div>

<% end %>