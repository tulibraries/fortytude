<% @collection = Rails.configuration.affiliation %>

<% if ["missing-book","purchase-request","data-purchase-grants-application"].include? params[:type] %>
	<% @collection = ["Faculty","Staff","Graduate","Undergraduate","Post Doc","Other..."] %>
<% elsif ["recall-book"].include? params[:type] %>
	<% @collection = ["Faculty","Staff"]  %>
<% end %>

<% unless params[:type] == "filming-request" %>
	<%= f.input :name, required: true %>
<% else %>
	<%= f.input :requestor, required: true %>
<% end %>

<%= f.input :email, as: :email, required: true %>

<% unless params[:type] == "filming-request" %>
	<%= f.input :phone, as: :tel, label: "Phone Number", required: true %>
<% end %>

<% unless ["ask-scrc","scrc-instruction","table-request","filming-request","cac-external"].include? params[:type ] %>
	<%= f.input :tu_id, label: "Temple ID Number", required: true %>
	<%= f.input :department, required: true %>
<% end %>

<% if params[:type] == "table-request" %>
	<%= f.input :group, label: "Group/Organization", required: true %>
<% end %>

<% unless ["library-instruction","scrc-instruction","table-request","cac-internal","cac-external"].include? params[:type ] %>
	<% unless params[:type] == "filming-request" %>
		<%= f.input :affiliation, as: :radio_buttons, label: "Temple Affiliation", collection: @collection, required: true %>
	<% else %>
		<%= f.input :affiliation, as: :radio_buttons, label: "Temple Affiliation", collection: ["Student", "Faculty",
"Staff", "Alumni", "Not affiliated with Temple"], required: true %>
	<% end %>
<% end %>

<% if ["missing-book","purchase-request"].include? params[:type]  %>
	<%= f.input :affiliation_other, label: false, placeholder: "specify other", wrapper_html: { class: "specify-other" } %>
<% end %>
