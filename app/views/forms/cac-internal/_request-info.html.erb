<%= f.input :degree_program, as: :select, 
            collection: t("manifold.default.forms.cac_internal.degree_program_options").map{ |k,v| v }, 
            label: t("manifold.default.forms.cac_internal.degree_program_label"), 
            required: true %>
<%= f.input :other, label: false, wrapper_html: { class: "specify-other" }, 
                    placeholder: t("manifold.default.forms.fields.other_placeholder") %>
<%= f.input :faculty_advisor, label: t("manifold.default.forms.cac_internal.faculty_advisor"), required: true %>
<%= f.input :faculty_advisor_email, label: t("manifold.default.forms.cac_internal.faculty_advisor_email"), required: true %>
<%= f.input :degree_year, as: :select, 
            collection: t("manifold.default.forms.cac_internal.degree_year_options").map{ |k,v| v }, 
            label: t("manifold.default.forms.cac_internal.degree_year_label"), 
            required: true %>
<%= f.input :personal_statement, as: :text, label: t("manifold.default.forms.cac_internal.personal_statement"), required: true %>
