   <div class="row">
    <div class="col">
     <%= t("manifold.default.finding_aids.intro_html") %>
    </div>
  </div>
  <div class="d-block d-lg-none filters">
    <% unless filter_tags_aids(@collections).empty? %>
      <% filter_tags_aids(@collections).each do |tag| %>
        <span class="filter-tag"><%= tag.html_safe %></span>
      <% end %>
      <% unless filter_tags_aids(@collections).size < 2 %>
        <%= link_to "Reset Filters", finding_aids_path, class: "reset-filters" %>
      <% end %>
    <% end %>
  </div>

   <% unless @aids_list.nil? %>
   
   <div class="row aid">
    <% @aids_list.each do |aid| %>
      <div class="col-12" style="font-size:larger;font-weight:600;margin:10px 15px;padding-bottom: 14px;padding-left: 0;border-bottom:solid #ccc 1px" >
        <%= link_to aid.name.html_safe, finding_aid_path(aid), style: "color: black;" %>
      </div> 
    <% end %> 
    </div>
      
    <div class="row text-center paginator" style="border-left: solid white 14px;margin-top: 21px;">
      <div class="col">
        <%= paginate @aids_list %>
      </div>
    </div>
    
  <% end %>
