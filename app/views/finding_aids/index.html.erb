<%= render "mobile_menu" %>

<div class="container aid-index">

  <h1 class="d-none d-lg-block"><%= title t("manifold.finding_aids.index.page_title") %></h1>

  <div class="row">
    <div class="col-3 leftside-index d-none d-md-none d-lg-block">
      <div class="panel-group" id="accordion">
			  <div class="filter_collections">
			    <%= render "collections" %>
			  </div>
			  <div class="filter_subjects">
			    <%= render "subjects" %>
			  </div>
			  <div class="filter_reset">
			    <%= render "reset" %>
			  </div>
			</div>
    </div>

    <div class="col-12 col-lg-6" style="padding-left: 28px;">
      <%= render "aid_list" %>
    </div>

    <div class="col-12 col-lg-3" style="padding-left: 28px;">
      <h2><%= link_to t("manifold.finding_aids.index.search_link"), "/finding_aids/search", class: "catalog-link" %></h2>
    </div>
  </div>

</div>
