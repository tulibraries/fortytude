<div class="row">
  <div class="col breadcrumbs">
    <%= link_to "Home", root_path.to_s %> 
    Groups
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="vertical-stripes-sm">
      <h1><%= title "Departments" %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
  	<div class="col">
<% unless @departments.nil? %>
  <div class="row groupsRow">
    <% @departments.in_groups_of(3).each do |dept| %>
      <% unless @departments.size < 3 %>
      <div class="col-md-1"></div>
        <div class="col-sm-10 offset-sm-1 col-md-3 offset-md-1 m-2 cta first">
          <div class="group">
            <%= link_to dept.first.name, group_path(dept.first) %>
          </div>
        </div>
        <% unless dept.second.nil? %>
          <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta">
            <div class="group">
                <%= link_to dept.second.name, group_path(dept.second) %>
            </div>
          </div>
        <% end %>
        <% unless dept.third.nil? %>
          <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta last">
            <div class="group">
                <%= link_to dept.third.name, group_path(dept.third) %>
            </div>
          </div>
        <% end %>

      <div class="col-md-1"></div>
      <% end %>

      <% if @departments.size == 2 %>
      <div class="col-md-2"></div>
        <div class="col-md-4 offset-md-2 m-2 cta first">
          <div class="group">
            <%= link_to dept.first.name, group_path(dept.first) %>
          </div>
        </div>
        <div class="col-md-4 m-2 cta last">
          <div class="group">
            <%= link_to dept.second.name, group_path(dept.second) %>
          </div>
        </div>
        <div class="col-md-1"></div>
      <% end %>

      <% if  @departments.size == 1  %>
        <div class="col-xs-6 offset-xs-3 col-md-4 offset-md-4 cta both">
          <div class="group">
           <%= link_to dept.first.name, group_path(dept.first) %>
          </div>
        </div>
      <% end %>

    <% end %>
<% end %>

    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="col">
    <div class="vertical-stripes-sm">
      <h2><span>Cross-Departmental Teams</span></h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <% unless @teams.nil? %>
  <div class="row groupsRow">
    <% @teams.in_groups_of(3).each do |team| %>
      <% unless @teams.size < 3 %>
      <div class="col-md-1"></div>
        <div class="col-sm-10 offset-sm-1 col-md-3 offset-md-1 m-2 cta first">
          <div class="group">
            <%= link_to team.first.name, group_path(team.first) %>
          </div>
        </div>
        <% unless team.second.nil? %>
          <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta">
            <div class="group">
                <%= link_to team.second.name, group_path(team.second) %>
            </div>
          </div>
        <% end %>
        <% unless team.third.nil? %>
          <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta last">
            <div class="group">
                <%= link_to team.third.name, group_path(team.third) %>
            </div>
          </div>
        <% end %>

      <div class="col-md-1"></div>
      <% end %>

      <% if @teams.size == 2 %>
      <div class="col-md-2"></div>
        <div class="col-md-4 offset-md-2 m-2 cta first">
          <div class="group">
            <%= link_to team.first.name, group_path(team.first) %>
          </div>
        </div>
        <div class="col-md-4 m-2 cta last">
          <div class="group">
            <%= link_to team.second.name, group_path(team.second) %>
          </div>
        </div>
        <div class="col-md-1"></div>
      <% end %>

      <% if  @teams.size == 1  %>
        <div class="col-xs-6 offset-xs-3 col-md-4 offset-md-4 cta both">
          <div class="group">
           <%= link_to team.first.name, group_path(team.first) %>
          </div>
        </div>
      <% end %>

    <% end %>
<% end %>
    </div>
  </div>
</div>