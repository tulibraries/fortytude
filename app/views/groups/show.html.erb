<h1>Groups</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name: </strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description: </strong>
  <%= @group.description %>
</p>

<p>
  <strong>Phone number: </strong>
  <%= @group.phone_number %>
</p>

<p>
  <strong>Email: </strong>
  <%= @group.email_address %>
</p>

<p>
  <strong>Owner: </strong>
  <% unless @group.chair_dept_head.nil? %>
    <%= link_to (@group.chair_dept_head.first_name+' '+@group.chair_dept_head.last_name), controller: 'persons', action: 'show', id: @group.chair_dept_head.id %>
  <% end %>
</p>

<p>
  <strong>Members: </strong>
  <% unless @group.persons.empty? %>
    <%= link_to (@group.persons.first.first_name+' '+@group.persons.last.last_name), controller: 'persons', action: 'show', id: @group.persons.last.id %>
  <% end %>
</p>

<p>
  <strong>Building: </strong>
  <%= @group.buildings.first.name unless @group.buildings.empty? %>
</p>

<p>
  <strong>Space: </strong>
  <%= @group.spaces.first.name unless @group.spaces.empty? %>
</p>

<%= link_to 'Back', groups_path %>
