<h1>Groups</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name: </strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description: </strong>
  <%= @group.description %>
</p>

<p>
  <strong>Phone number: </strong>
  <%= @group.phone_number %>
</p>

<p>
  <strong>Email: </strong>
  <%= @group.email_address %>
</p>

<p>
  <strong>Owner: </strong>
  <%= link_to (@group.persons.first.first_name+' '+@group.persons.first.last_name), controller: 'persons', action: 'show', id: @group.person_ids.first %>
</p>

<p>
  <strong>Building: </strong>
  <%= @group.building.name %>
</p>

<p>
  <strong>Space: </strong>
  <%= @group.space.name %>
</p>

<%= link_to 'Back', groups_path %>
