          <div class="title">
                <%= link_to (person.first.first_name+' '+person.first.last_name), 
                      person_path(person.first) %></div>
            <div class="info">
              <div class="photo">
                <% if person.first.image.attached? %>
                  <%= link_to image_tag(person.first.thumb_image, class: "decorative", alt: ""), 
                      person_path(person.first) %>
                <% else %>
                  <%= link_to (image_tag 'T-borderless.gif', class: "decorative", alt: ""), person_path(person.first) %>
                <% end %>
              </div>
              <div class="details">
                <div class="job-title">
                  <%= person.first.job_title %>
                </div>
                <%= phone_formatted(person.first.phone_number) %>
                <br />
                <%= person.first.email_address %>
                <% unless person.first.springshare_id.blank? %>
                  <div class="appt_button">
                    <%= link_to "Make an Appointment", "https://api3.libcal.com/appointments-widget.php?u=#{person.first.springshare_id}&iid=1621&t=Make%20an%20Appointment", class: "appointmentbutton", target: "_new" %>
