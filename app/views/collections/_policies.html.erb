
<% unless @collection.space.policies.blank? %>
<div class="row">
  <div class="col">
    <div class="vertical-stripes-sm">
      <h2><span>Policies</span></h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row policiesRow">
    <% @collection.space.policies.in_groups_of(3).each do |group| %>
      <% unless @collection.space.policies.size < 3 %>
      <div class="col-md-1"></div>
        <div class="col-sm-10 offset-sm-1 col-md-3 offset-md-1 m-2 cta first">
          <div class="policy">
            <%= link_to group.first.name, group.first %>
          </div>
        </div>
        <% unless group.second.nil? %>
          <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta">
            <div class="policy">
                <%= link_to group.second.name, group.second %>
            </div>
          </div>
        <% end %>
        <% unless group.third.nil? %>
          <div class="col-sm-10 offset-sm-1 col-md-3 m-2 cta last">
            <div class="policy">
                <%= link_to group.third.name, group.third %>
            </div>
          </div>
        <% end %>

      <div class="col-md-1"></div>
      <% end %>

      <% if @collection.space.policies.size == 2 %>
      <div class="col-md-2"></div>
        <div class="col-md-4 offset-md-2 m-2 cta first">
          <div class="policy">
            <%= link_to group.first.name, group.first %>
          </div>
        </div>
        <div class="col-md-4 m-2 cta last">
          <div class="policy">
            <%= link_to group.second.name, group.second %>
          </div>
        </div>
        <div class="col-md-1"></div>
      <% end %>

      <% if @collection.space.policies.size == 1  %>
        <div class="col-xs-6 offset-xs-3 col-md-4 offset-md-4 cta both">
          <div class="policy">
           <%= link_to group.first.name, group.first %>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  <% end %>
</div>
