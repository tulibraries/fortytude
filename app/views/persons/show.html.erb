
<p id="notice"><%= notice %></p>

<h1><%= @person.first_name %> <%= @person.last_name %></h1>

<% if @person.photo.attached?  %>
  <p>
    <%= image_tag @person.photo, class: "small" %>
  </p>
<% end %>

<p>
  <strong>Phone number</strong>
  <%=@person.phone_number %>
</p>

<p>
  <strong>Email</strong>
  <%=@person.email_address %>
</p>

<p>
  <strong>Chat:</strong>
  <%= @person.chat_handle %>
</p>

<p>
  <strong>Job Title</strong>
  <td><%=@person.job_title %>
</p>

<p>
  <strong>Identifier</strong>
  <%=@person.identifier %>
</p>

<p>
  <strong>Space:</strong>
  <%= @person.spaces.last.name unless @person.spaces.empty? %>
</p>

<%= link_to 'Back', people_path %>
