<%= render "mobile-menu-secondary" %>

<div class="container policy-show">
	
	<div class="row">
		<div class="col-lg-3 d-none d-lg-block">
	    <%= render "categories_list" %>
	  </div>

	  <% unless @policy.effective_date.nil? %>
	  	<div class="col-12 col-lg-6">
	  <% else %>
	  	<div class="col-12 col-lg-9">
	  <% end %>

	    <% unless @policy.covid_alert.nil? %>
      <div class="row covid-alert">
        <div class="col-12 col-lg-10 offset-lg-1">
        <strong><%= t("manifold.default.covid_alert") %></strong> 
        <%= sanitize @policy.covid_alert.html_safe %>
        </div>
      </div>
      <% end %>

	    <h1 class="page-title"><%= title @policy.name %></h1>
	    <%= sanitize @policy.description.html_safe %>
	  </div>

	  <% unless @policy.effective_date.nil? %>
	  	<div class="col-12 col-lg-3">
	  		<div class="effective_date entity-help">
	  		<h2><%= t("manifold.policies.show.effective_date") %></h2>
	  			<%= @policy.effective_date.strftime("%^B %d, %Y ") %>
	  		</div>
	  	</div>
	  <% end %>

	</div>

</div>

<script type="application/ld+json">
  <%= json_ld(@policy) %>
</script> 