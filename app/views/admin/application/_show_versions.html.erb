<% if (page.resource.respond_to?(:versions) and not page.resource.versions.empty?) %>
  <dt class="attribute-label" id="versions">
    <label for"versions"><%= t('manifold.admin.actions.version') %></label>
  </dt>
  <dd>
    <table class="table">
      <thead>
        <tr>
          <th>Modifier</th>
          <th>Event</th>
          <th>Date/Time</th>
        </tr>
      </thead>
      <tbody>
        <% page.resource.versions.each do |version| %>
          <%= tag.tr do %>
            <%= tag.td version.event %>
            <%= tag.td Account.find(version.whodunnit).email unless version.whodunnit.nil? %>
            <%= tag.td version.created_at %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </dd>
<% end %>
