<% if @webpage.file_uploads.present? %>
  <% if @webpage.file_uploads.any? { |fu| fu.file.content_type == "application/pdf" } %>
      <ul class="list-unstyled">
      <% @webpage.file_uploads.each do |fu| %>
        <% if fu.file.content_type == "application/pdf" %>
          <li class="press-button">
            <%= link_to "Download PDF", url_for(fu.file), disposition: "attachment" %>
          </li>
      <% end %>
    <% end %>
    <% "</ul>" unless @webpage.epub.present? %>
  <% end %>
<% end %>

<% if @webpage.epub.present? %>
      <li class="press-button">
        <%= link_to "Download ePub", @webpage.epub.url, disposition: "attachment" %>
      </li>
      <li class="press-button">
        <%= link_to "Read it Online", webpages_epub_path %>
      </li>
    </ul>
<% end %>
