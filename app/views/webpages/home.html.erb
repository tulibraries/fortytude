<div id="home">
<div id="searchFields">

	<%= render "page-search" %>

</div>

<div class="col-12 d-block d-lg-none px-0" id="search-in-page">
	<%= render "page-search" %>
</div>
<div class="container under">
	<div class="row ctaRow">
		<div class="col-12 col-lg-3 pr-3">
	    <div class="cta-white">
		    <%= link_to "/research-help", {class: "strong", id: "research-help"} do %>
		      <%= image_tag('research_help.png', class: "decorative", alt: "") %> 
			  <span><%= t("manifold.webpages.home.links.help.research") %></span>
		    <% end %>
	    </div>
	  </div>
		<div class="col-12 col-lg-3 pr-3">
	    <div class="cta-white">
		    <%= link_to "https://charlesstudy.temple.edu", {class: "strong", id: "study-space"} do %>
		      <%= image_tag('study_room.png', class: "decorative", alt: "") %> 
			  <span><%= t("manifold.webpages.home.links.help.reserve_study_space") %></span>
		    <% end %>
	    </div>
	  </div>
	  <div class="col-12 col-lg-3 pr-3">
	    <div class="cta-white">
		    <%= link_to category_path(47), {class: "strong", id: "visit-us"} do %>
		      <%= image_tag('explore_charles.png', class: "decorative", alt: "") %> 
			  <span><%= t("manifold.webpages.home.links.help.in_person") %></span>
		    <% end %>
	    </div>
	  </div>
	  <div class="col-12 col-lg-3">
	    <div class="cta-white">
		    <%= link_to webpage_path(61), {class: "strong", id: "online-support"} do %>
		      <%= image_tag('remote-student-support.png', class: "decorative", alt: "") %> 
			  <span><%= t("manifold.webpages.home.links.help.remote_support") %></span>
		    <% end %>
	    </div>
	  </div>
	</div>
</div>

<div id="hollywood-squares">
	<div class="container">
		<div class="row">
			<div class="col-12 col-lg-3 catalog-search h-auto">
				<div class="h-18 square">
			    <%= link_to "#{librarysearch_url}/catalog", id: "books-media" do %>
			      <%= image_tag('book_white.png', class: "icon decorative", alt: "") %> 
				  <span><%= t("manifold.webpages.home.links.main.books") %></span>
			    <% end %>
				</div>
				<div class="h-18 square">
			    <%= link_to "#{librarysearch_url}/articles", id: "articles" do %>
			      <%= image_tag('magazine_white.png', class: "icon decorative", alt: "") %> 
				  <span><%= t("manifold.webpages.home.links.main.articles") %></span>
			    <% end %>
				</div>
				<div class="h-18 square">
			    <%= link_to "/databases", id: "databases" do %>
			      <%= image_tag('database_white.png', class: "icon decorative", alt: "") %> 
				  <span><%= t("manifold.webpages.home.links.main.databases") %></span>
			    <% end %>
				</div>
        <div class="h-18 square">
          <%= link_to "/research-guides", id: "research-guides" do %>
            <%= image_tag('guides_white.png', class: "icon decorative", alt: "") %> 
			<span><%= t("manifold.webpages.home.links.main.guides") %></span>
          <% end %>
        </div>
        <div class="h-18 square bb-0">
          <%= link_to "/journal-finder", id: "journal-finder" do %>
            <%= image_tag('journal_finder.png', class: "icon decorative", alt: "") %> 
			<span><%= t("manifold.webpages.home.links.main.journals") %></span>
          <% end %>
        </div>
				<div class="caption">
					<%= link_to t("manifold.webpages.home.links.main.collections_search"), librarysearch_url, {class: "price", id: "collections-search"} %>
				</div>
			</div>
			<div class="col-12 col-lg-6 px-0 px-lg-5 news-events">
				<div class="events">
			    <%= link_to events_path, id: "events" do %>
			      <%= image_tag('homepage-events.jpg', class: "d-none d-lg-block decorative", alt: "") %>
			      <%= image_tag('art.png', class: "d-inline d-lg-none decorative", alt: "") %>
			      <div class="caption" id="eventscaption">
							<span class="lynde"><%= t("manifold.webpages.home.links.main.events") %></span>
						</div>
			    <% end %>
				</div>
				<div class="quicklinks" style="background-color:#fff;height:213px;font-family:Roboto;">
					<ul class="list-unstyled" style="padding:2px 14px;margin-bottom:1px;line-height: 2.5rem">
						<li style="font-size:x-large;border-bottom:solid #ccc 1px;">EZBorrow</li>
						<li style="font-size:x-large;border-bottom:solid #ccc 1px;">Illiad</li>
						<li style="font-size:x-large;border-bottom:solid #ccc 1px;">Refworks</li>
						<li style="font-size:x-large;">Find by Citation</li>
					</ul>
					<div class="caption text-right pr-4 pt-2" id="newsscaption">
						<%= "Quick Links" %>
					</div>
				</div>
			</div>
			<div class="col-12 col-lg-3 locations-links px-0">
				<div class="h-20"><%= link_to t("manifold.webpages.home.links.main.locations.charles"), "/explore-charles", id: "charles-library" %></div>
				<div class="h-20"><%= link_to t("manifold.webpages.home.links.main.locations.hsl"), webpages_hsl_path, id: "hsl" %></div>
				<div class="h-20 two-lines"><%= link_to t("manifold.webpages.home.links.main.locations.lcdss"), webpages_lcdss_path, {class: "not-wrapped", id: "lcdss"} %></div>
				<div class="h-20 two-lines"><%= link_to t("manifold.webpages.home.links.main.locations.blockson"), webpages_blockson_path, id: "blockson" %></div>
				<div class="h-20 two-lines"><%= link_to t("manifold.webpages.home.links.main.locations.scrc"), webpages_scrc_path, {class: "not-wrapped", id: "scrc"} %></div>
				<div class="h-20 bb-0"><%= link_to t("manifold.webpages.home.links.main.locations.law"), "/law-library", id: "law" %></div>
				<div class="caption">
					<%= link_to(t("manifold.webpages.home.links.main.locations.all"), "/all-locations", {class: "gobel", id: "all-locations"}) %>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
</div>

<div>
	<div class="container">
	<h2 class="text-center" style="font-size:300%;margin-bottom: 42px">Library News</h2>
		<div class="row">
		<%= render "featured" %>
		</div>
	</div>
</div>