<% @buildings.each do |location| %>

  <div class="row building-row">
    <div class="col px-0">
      <h2 style="color: #A50030">
        <%= location_name(location[:slug]) %>
      </h2>
    </div>
  </div>

  <div class="row"> <!-- dates header -->
    <div class="col-3"></div>
      <% 7.times do |date| %>
      <% if @monday.to_date+date == @today %>
        <div class="col hours-dates today day-of-week text-center">
      <% else %>
        <div class="col hours-dates text-center">
      <% end %>
          <%= (@monday.to_date+date).strftime("%a %d") %> 
        </div>
      <% end %>
   </div>

  <% unless location[:spaces].first.second.empty? || location[:slug] == "blockson" %> <!-- hours for at least one space -->
   
   <% location[:spaces].each do |space| %>

        <div class="row hours-row">
          <div class="col-<%= space[1].first.location_id == "scrc" ? "12" : "3" %> px-0"> 
            <h3>
              <%= location_link(space[1].first.location_id) %>
            </h3>
          </div>

          <% if space[1].first.location_id == "scrc" %>
          <div class="col-9 offset-3 pl-5 text-left">
            <%= t("manifold.hours.scrc_note_html").html_safe %>
          </div>
          <% else %>

            <% space[1].sort_by(&:date).each_with_index do |time,index| %> 
              <% if @monday.to_date+index == @today %>
                <div class="col today">
                <% else %>
                <div class="col">
              <% end %>
              <% if time.hours.downcase == "closed" %>
                <span class="closed"><%= time.hours %></span>
              <% else %>
                <%= time.hours %>
              <% end %>
              </div>
            <% end %>
          <% end %>

        </div> <!-- hours-row -->

      <% end %>
    <% else %> <!-- unless -->
      <div class="row" style="margin-top: 14px;">
        <div class="col-9 offset-3 text-left">
          <%= t("manifold.hours.blockson_note_html").html_safe if location[:slug] == "blockson" %>
          <%= "<h3>#{t("manifold.webpages.hours.no_data")}</h3>" if location[:spaces].first.second.empty? %>
        </div>
      </div> 
    <% end %>

<% end %>