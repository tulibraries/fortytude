<div class="row">
  <div class="col breadcrumbs">
    <%= link_to "Home", root_path.to_s %> 
    Library Hours
  </div>
</div>

<div class="row">
  <div class="col">
    <A name="top"></A>
    <div class="vertical-stripes page-title">
      <h1><span>Library Hours</span></h1>
    </div>
  </div>
</div>

<div class="row date-nav">
  <div class="col-md-6 text-center date-range">

      <%= link_to "<-", {controller: "library_hours", action: "index", anchor: "top", week: @last_week} %> 

      <%= @sunday.strftime("%b %d, %Y") %> - <%= @saturday.strftime("%b %d, %Y") %>
     
      <%= link_to "->", {controller: "library_hours", action: "index", anchor: "top", week: @next_week} %>

  </div>
  <div class="col-md-6 text-center">
    <%= link_to "Go to Today", {controller: :library_hours, action: :index}, class: "today_button"  %>
  </div>
</div>

<div style="padding-left: 10px;padding-right:10px;">

<% @buildings.each do |location| %>
<% unless location_name(location.values.first).nil? %>

  <div class="row" style="margin-top: 35px;">
    <div class="col">
      <h2 style="padding-left: 21px;border-width: 4px;color: #A50030">
        <%= location_name(location.values.first) %>
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
      <% 7.times do |date| %>
      <% if @sunday+date == @today %>
        <div class="col hours-dates today day-of-week text-center">
      <% else %>
        <div class="col hours-dates text-center">
      <% end %>
          <%= (@sunday+date).strftime("%a %d") %> 
        </div>
      <% end %>
   </div>

    <% location.values.second.each do |hours| %>
      <%# unless location_name(hours.second.first.location_id).nil? %>
        <div class="row" style="margin-top: 14px;">
          <div class="col-3 text-right"> 
            <h3 style="padding-right: 28px;"><%= location_name(hours.second.first.location_id) %></h3>
          </div>

            <% hours.second.each_with_index do |time,index| %> 
              <% if @today.strftime("%w") == index.to_s && @cweek == @week && @cyear == @year %>
                <div class="col today">
                <% else %>
                <div class="col">
              <% end %>
              <% if time.hours.downcase == "closed" %>
                <span class="closed"><%= time.hours %></span>
                <% else %>
                <%= time.hours %>
              <% end %>
              </div>
            <% end %>

        </div>
      <%# end %>
    <% end %>

<% end %>
<% end %>
</div>
