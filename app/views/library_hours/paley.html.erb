<p id="notice"><%= notice %></p>

<h1><%= @location.first.name %> Hours</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <% unless hour.date.to_date < @today %>
      <tr>
        <td>
          <% if(hour.date.to_date) %>
            <%= hour.date.strftime("%A, %B %d, %Y") %>
          <% else %>
            <%= hour.date %>
          <% end %>
        </td>
        <td><%= hour.hours %></td>
        <td><%# link_to 'Show', library_hour %></td>
        <td><%# link_to 'Edit', edit_library_hour_path(library_hour) %></td>
        <td><%# link_to 'Destroy', library_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

