<div class="row">
  <div class="col breadcrumbs">
    <%= link_to "Home", root_path.to_s %> 
    <%= link_to "Libraries", controller: 'buildings', action: :index %> 
    <%= @building.name %>
  </div>
</div>


<div class="row building-info">
  <div class="d-none d-xl-block col-xl-6 text-center text-xl-right">
    <div class="building-image">
      <% if @building.image.attached? %>
        <%= image_tag @building.image_variation(600,450) %>
      <% else %>
        <%= image_tag 'T-borderless.gif' %>
      <% end %>
    </div>
  </div>
  <div class="col-lg-12 col-xl-6 text-center text-xl-left">
    <div class="building-description">
      <h1 class="text-md-center text-xl-left"><%= @building.name %></h1>
      <div class="text-left text"><%= @building.description.html_safe %></div>
    </div>
  </div>
</div>

<div class="row d-none d-lg-block">
  <div class="col">
    <%= render :partial => "/application/show_hours" %>
  </div>
</div>