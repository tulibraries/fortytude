<div class="row" id="seagreen">
  <div class="col-11 offset-1">
    <h1>
      <span>Library: </span>
      <%= @building.name %>
    </h1>
  </div>
</div>

  <div class="row">
    <div class="col">
      <div class="vertical-stripes-sm">
        <h1>Description</h1>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row">
    <div class="col">
      <p>
        <%= @building.description.html_safe %>
      </p>
    </div>
  </div>
</div>

  <div class="row">
    <div class="col">
      <div class="vertical-stripes-sm">
        <h1>Plan your visit</h1>
      </div>
    </div>
  </div>

<!-- <div class="container"> -->
  <div class="row ctaRow building-info">
    <div class="col-12 col-lg-4 card ctaFirst">
      <div class="card-body" style="padding-top:10%;line-height: 3.0rem;font-size: larger">
        <span class="phone"><%= number_to_phone(@building.phone_number, area_code: true) %></span><br />
        <span class="email"><%= mail_to @building.email, @building.email, {style: "color: white;"} %></span><br />
        <span class="address"><%= @building.address1 %></span>
      </div>
      <div class="card-title complement">
        Contact
      </div>
    </div>
    <div class="col-12 col-lg-4 card ctaMidOne">
      <div class="card-body">
      <div id="dateTime">
        <div id="date">
          FRIDAY, AUGUST 17, 2018
        </div>
        <div id="time">
          Paley Library | 8am - 7pm
        </div>
        <div id="allHours">
          See all library hours >
        </div>
      </div>
      </div>
      <div class="card-title complement">
        Hours
      </div>
    </div>
    <div class="col-12 col-lg-4 card ctaLast">
      <div class="card-body">
      <%= link_to image_tag("https://maps.googleapis.com/maps/api/staticmap?center=#{@building.coordinates}&zoom=15&size=420x275&markers=size:mid%7Ccolor:red%7Clabel:%7C#{@building.coordinates}&key=#{Rails.configuration.google_maps_api_key}", alt: "Google Map of #{@building.name}"), "https://www.google.com/maps/search/?api=1&query=#{@building.coordinates}&query_place_id=#{@building.google_id}" %>
      </div>
      <div class="card-title complement">
        Map!
      </div>
    </div>
  </div>
<!-- </div> -->

<% unless @building.spaces.nil? %>
  <div class="row">
    <div class="col">
      <div class="vertical-stripes-sm">
        <h1><%= @building.name %> Spaces</h1>
      </div>
    </div>
  </div>

  <div class="margin-left: 77px;margin-right: 77px">
    <div class="row spacesRow">

<% @building.spaces.each do |space| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 ctaTwo text-center">
        <div class="related_space">
          <%= link_to image_tag('researchhelp.jpg', class: "card-img-top", alt: "Card image cap"), space_path(space) %>
        </div>
        <div class="card-body">
          <span class="card-title"><%= space.name %></span>
        </div>
      </div>
<% end %>
<% end %>
  </div>

