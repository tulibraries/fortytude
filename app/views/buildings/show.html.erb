<p id="notice"><%= notice %></p>

<h1>
  Library: <%= @building.name %>
</h1>


  <div class="row">
    <div class="col">
      <div class="vertical-stripes">
        <h2>Description</h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>
        <%= @building.description.html_safe %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="vertical-stripes">
        <h2>Plan your visit</h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-lg-4 card">
      <%= @building.phone_number %><br />
      <%= @building.email %><br />
      <%= @building.address1 %>
    </div>
    <div class="col-12 col-lg-4 card">
      <div id="dateTime">
      <div id="date">
        FRIDAY, AUGUST 17, 2018
      </div>
      <div id="time">
        Paley Library | 8am - 7pm
      </div>
      <div id="allHours">
        See all library hours >
      </div>
    </div>
    </div>
    <div class="col-12 col-lg-4 card">
      <%= link_to "Google Map!", @building.directions_map %>
    </div>
  </div>

