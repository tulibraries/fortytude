  </div>
  
    <% flash.each do |key, value| %>
       <div class="flash <%= key %>"><%= value %></div>
    <% end %>


  <%= render "header_navbar.html.erb" %>

  <div id="content">
    <a href="#" name="skiplink_ada" id="skiplink_ada"></a>
    <%= yield %>

  </div>

  <%= render "footer.html.erb" %>

