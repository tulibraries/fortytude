<div id="home">
<div id="searchFields">

	<%= render "page-search" %>
	
	<div class="row d-none d-md-none d-lg-block">
	    <%= render "search-options" %>
	</div>
	<div class="row d-block d-md-block d-lg-none">
	    <%= render "responsive-search-options" %>
	</div>
</div>

<div class="container index">
	<div class="row ctaRow">
		<%= render "home-row" %>
	</div>
</div>

<% unless @highlights.blank? %>
<div class="row">
	<div class="col">
		<div class="vertical-stripes">
			<h1><span>News &amp; Highlights</span></h1>
		</div>
	</div>
</div>

<div class="container index">
	<div class="row ctaRow news">
		<%= render "highlights-row" %>
	</div>
</div>
<% end %>

<% unless @events.nil? %>
<div class="row">
	<div class="col">
		<div class="vertical-stripes">
			<h1><span>Events</span></h1>
		</div>
	</div>
</div>

<div class="container index">
	<div class="row ctaRow events">
		<%= render "events-row" %>
	</div>
</div>
<% end %>
