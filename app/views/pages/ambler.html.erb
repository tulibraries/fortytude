<% content_for :body_class, "minipage" %>
<h1 class="title">
	Ambler Campus Library
</h1>
<div id="ambler">
<div id="searchFields">
	<div id="searchOptions">
		<ul>
			<li>Everything</li>
			<li>Books</li>
			<li>Articles</li>
			<li>Databases</li>
		</ul>
