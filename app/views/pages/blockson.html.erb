<% content_for :body_class, "minipage blockson" %>

<div class="banner-image blockson"></div>

<div class="container">

<div class="row">
	<div class="col">
		<h1 class="page-title text-center">
			<%= title "Charles L. Blockson Afro-American Collection" %>
		</h1>
	</div>
</div>

<div class="row">
	
	<div class="col-12 col-lg-4 pr-14 left-links">

		<div class="locations">
			<%= link_to "Digitized Materials", "https://digital.library.temple.edu/" %>
		</div>

		<div class="contact">
			<% unless @building.nil? %>
			<%= image_tag "information_white.png", style: "width: 100px", class: "decorative", alt: "" %>
			<%= link_to "Hours & Info", @building %>
			<hr />
			<% end %>
			<%= image_tag "phone-handle-white.png", style: "width: 100px", class: "decorative", alt: "" %>
			215-204-6632
		</div>

	</div>

	<div class="col-12 col-lg-8 description-container">
		<% unless @page.nil? || @page.description.nil? %>
		<div class="row">
			<div class="col-12 description">
				<%= sanitize(@page.description.html_safe) %>
			</div>
		</div>
		<% end %>
		<div class="row links-container">
			<% unless @visit_links.nil? %>
			<div class="col-12 col-lg-6">
				<div class="links d-none d-lg-block">
					<h2>Visit & Study</h2>
					<ul class="list-unstyled">
						<% @visit_links.each do |link| %>
							<li><%= link_to link.label, link %></li>
						<% end %>
					</ul>
				</div>
				<div class="links d-block d-lg-none">
					<%= render "pages/mini-partials/visit" %>
				</div>
			</div>
			<% end %>
			<% unless @research_links.nil? %>
			<div class="col-12 col-lg-6">
				<div class="links d-none d-lg-block">
					<h2>Research Services</h2>
					<ul class="list-unstyled">
						<% @research_links.each do |link| %>
							<li><%= link_to link.label, link %></li>
						<% end %>
					</ul>
				</div>
				<div class="links d-block d-lg-none">
					<%= render "pages/mini-partials/research" %>
				</div>
			</div>
			<% end %>
			<% unless @events.blank? %>
			<div class="col-12 col-lg-6">
				<div class="links d-none d-lg-block">
					<h2>Workshops & Events</h2>
					<ul class="list-unstyled">
						<% @events.each do |link| %>
							<li><%= link_to link.label, link %></li>
						<% end %>
							<li class="text-right all-events"><%= link_to "View all", events_path, style: "text-decoration:underline" %> ></li>
					</ul>
				</div>
				<div class="links d-block d-lg-none">
					<%= render "pages/mini-partials/events" %>
				</div>
			</div>
			<% end %>

		</div>
	</div>
	
</div>

</div>


