<div class="container events_facets">
  <form action="https://librarysearch.temple.edu/bento">
    <span class="fa fa-search"></span>
    <input type="text" name="q" class="events_search" placeholder="Search events" />
  </form>
  <% unless @event_types.empty? %>
  <div class="event_types">
    <h3 class="types_header">Event type</h3>
    <ul class="list-unstyled">
      <% @event_types.each do |type| %>
        <% unless type == params[:type] %>
          <li><%= link_to type, {controller: :events, action: :past, type: type} %></li>
        <% else %>
          <li class="active"><%= link_to type, {controller: :events, action: :past, type: type} %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <% end %>
  <% unless @event_locations.empty? %>
  <div class="event_spaces">
    <h3 class="spaces_header">Location</h3>
    <ul class="list-unstyled">
      <% @event_locations.each do |location| %>
        <% unless location == params[:location] %>
          <% unless location.first.nil? %>
            <li><%= link_to location.second, {controller: :events, action: :past, location: location.first} %></li>
            <% else %>
            <li><%= link_to location.second, {controller: :events, action: :past, location: location.second} %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="row">
    <div class="col text-center">
      <%= link_to "[ reset all filters ]", {controller: :events, action: :past}, class: "reset" %>
    </div>
  </div>
</div>