<div class="container">
  <div class="row">
    <div class="col">
      <h1>Past Events &amp; Exhibits</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-3 filters">
      <%= render "facets" %>
    </div>
    <div class="col-6 events">
      <div class="row">
        <div class="col-12 upcoming-header">
          Past Events
        </div>
      </div>
      
      <%= render "events" %>

      <div class="row text-center paginator">
        <div class="col">
          <%= paginate @events_list %>
        </div>
      </div>
    </div>
    <div class="col-3 exhibits">
      <% unless @exhibitions.blank? %>
        <div class="row">
          <div class="col-12 exhibits-header">
            Current Exhibits
          </div>
        </div>

        <%= render "exhibitions" %>
      <% end %>

      <div class="row">
        <div class="col-12">
          <%= link_to "View current events & exhibits", events_path, class: "past-events-button" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= link_to "View video recordings from past events", events_path, class: "video-button" %>
        </div>
      </div>
    </div>
  </div>
</div>
