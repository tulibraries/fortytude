<%= render "mobile_menu" %>

<div class="container event-index">
  <div class="container">
  <div class="row">
    <div class="col-12 col-lg-8">
      <h1 class="d-none d-lg-block"><%= title t("manifold.events.index.page_title") %></h1>
      <% unless @intro.nil? %>
        <div class="intro"><%= sanitize @intro.description.html_safe %></div>
      <% end %>
    </div>
    <div class="col-12 text-center online-notice">
      <p>All library events are <strong>online only</strong> until further notice.</p>
    </div>
  </div>
</div>
<div class="container pb-3" id="featured-events">
  <div class="row mb-3">
    <div class="col-12 pt-2">
      <h2 style="font-size: 175%">Featured Events</h2>
    </div>

    <%= render "featured" if @featured_events.present? %>

  </div>

  <div class="row event-filters">
    <div class="col-12 col-md-3 text-center">
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button"  
        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Event Types
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= render "types" %>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-3 text-center pl-md-0">
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle pl-0" type="button"
        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Calendar
        </button>
        <div class="dropdown-menu pl-2" aria-labelledby="dropdownMenuButton">
          <%= render "dates" %>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 text-center text-md-right pr-lg-4 pt-3 filter-links">
      <%= link_to t("manifold.events.index.view_past_events"), past_events_path, class: "d-block d-lg-inline" %>
      | 
      <%= link_to t("manifold.events.index.view_past_events_videos"), webpages_videos_all_path, class: "d-block d-lg-inline" %>
    </div>
  </div>

<div class="container pr-md-4">
  <div class="row mt-3 mr-lg-2 mb-3 sub-level-background">
    <div class="col-12 col-lg-8 events pt-3 mb-3" id="events">
      <div class="row">
        <div class="col-12">  
          <a name="list"></a>
          <h2 class="p-3 mb-3 current-events">Upcoming Events</h2>
        </div>
      </div>
    <% if params[:type].present? %>
      <h2 class="ml-4 mb-4"><%= params[:type] %> Events</h2>
    <% end %>
    <% if params[:date].present? %>
      <h2 class="ml-4 mb-4">Events on <%= Date.parse(params[:date]).strftime("%m-%d-%Y") if params[:date].present? %></h2>
    <% end %>
    
      <%= render "events" %>

    </div>

    <div class="col-12 col-lg-4 exhibits">
    <div class="row">
    <div class="col-12 pt-3 mb-3" id="events-exhibits">

      <% unless @exhibitions.blank? %>
        <h2 class="p-3 mb-3 current-exhibits"><%= t("manifold.events.index.current_exhibits_label") %></h2>
        
        <%= render "exhibitions" %>
      
      <% end %>

      <div class="exhibit">
        <%= t("manifold.events.index.general_admission") %>
      </div>

    </div>
  </div>
  </div>
    </div>
  </div>
  </div>
</div>
