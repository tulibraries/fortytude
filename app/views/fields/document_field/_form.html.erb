<div class="field-unit__label">
  <%= f.label field.attribute %>
</div>
<div class="field-unit__field">
  <% if field.data.attached? %>
	  <%= f.file_field field.attribute %>
  	<% field.data.attachments.each do |attachment| %>
	  	<%= link_to attachment.filename, url_for(attachment), disposition: "attachment" %><br />
	  <% end %>
	<% else %>
	  <%= f.file_field field.attribute %>    
	<% end %>
</div>
