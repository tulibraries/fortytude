{
	"definitions": {},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/root.json",
	"type": "object",
	"title": "The Root Schema",
	"required": [
		"data"
	],
	"properties": {
		"data": {
			"$id": "#/properties/data",
			"type": "object",
			"title": "The Data Schema",
			"required": [
				"id",
				"type",
				"attributes"
			],
			"properties": {
				"id": {
					"$id": "#/properties/data/properties/id",
					"type": "string",
					"title": "The Id Schema",
					"default": "0",
					"examples": [
						"2"
					],
					"pattern": "^([0-9]*)$"
				},
				"type": {
					"$id": "#/properties/data/properties/type",
					"type": "string",
					"title": "The Type Schema",
					"default": "space",
					"examples": [
						"building",
						"event",
						"person"
					],
					"pattern": "^(.*)$"
				},
				"attributes": {
					"$id": "#/properties/data/properties/attributes",
					"type": "object",
					"title": "The Attributes Schema",
					"required": [
						"name",
						"label",
						"description"
					],
					"properties": {
						"name": {
							"$id": "#/properties/data/properties/attributes/properties/name",
							"type": "string",
							"title": "The Name Schema",
							"default": "",
							"examples": [
								"The Lobby"
							],
							"pattern": "^(.*)$"
						},
						"label": {
							"$id": "#/properties/data/properties/attributes/properties/label",
							"type": "string",
							"title": "The Label Schema",
							"default": "",
							"examples": [
								"The Lobby"
							],
							"pattern": "^(.*)$"
						},
						"description": {
							"$id": "#/properties/data/properties/attributes/properties/description",
							"type": "string",
							"title": "The Description Schema",
							"default": "",
							"examples": [
								"This is the description of the space"
							],
							"pattern": "^(.*)$"
						},
						"accessibility": {
							"$id": "#/properties/data/properties/attributes/properties/accessibility",
							"type": "string",
							"title": "The Accesibility Schema",
							"default": "",
							"examples": [
								"This space has accesibility information"
							]
						},
						"phone_number": {
							"$id": "#/properties/data/properties/attributes/properties/phone_number",
							"type": "string",
							"title": "The Telephone Number Schema",
							"default": "",
							"examples": [
								"2155551212"
							]
						},
						"email": {
							"$id": "#/properties/data/properties/attributes/properties/email",
							"type": "string",
              "format": "email",
							"title": "The Email Schema",
							"examples": [
								"zaphod@example.com"
							]
						}
					}
				}
			}
		}
	}
}
