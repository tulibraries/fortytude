{
	"definitions": {},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/root.json",
	"type": "object",
	"title": "The Root Schema",
	"required": [
		"data"
	],
	"properties": {
		"data": {
			"$id": "#/properties/data",
			"type": "object",
			"title": "The Data Schema",
			"required": [
				"id",
				"type",
				"attributes"
			],
			"properties": {
				"id": {
					"$id": "#/properties/data/properties/id",
					"type": "string",
					"title": "The Id Schema",
					"default": "0",
					"examples": [
						"2"
					],
					"pattern": "^([0-9]*)$"
				},
				"type": {
					"$id": "#/properties/data/properties/type",
					"type": "string",
					"title": "The Type Schema",
					"default": "service",
					"examples": [
						"building",
						"event",
						"person",
            "service"
					],
					"pattern": "^(.*)$"
				},
				"attributes": {
					"$id": "#/properties/data/properties/attributes",
					"type": "object",
					"title": "The Attributes Schema",
					"required": [
						"title",
						"label",
						"description",
            "intended_audience",
            "service_category"
					],
					"properties": {
						"title": {
							"$id": "#/properties/data/properties/attributes/properties/name",
							"type": "string",
							"title": "The Title Schema",
							"default": "",
							"examples": [
								"Document Delivery",
                "Borrow Books & DVDs"
							],
							"pattern": "^(.*)$"
						},
						"label": {
							"$id": "#/properties/data/properties/attributes/properties/label",
							"type": "string",
							"title": "The Label Schema",
							"default": "",
							"examples": [
								"Document Delivery",
                "Borrow Books & DVDs"
							],
							"pattern": "^(.*)$"
						},
						"description": {
							"$id": "#/properties/data/properties/attributes/properties/description",
							"type": "string",
							"title": "The Description Schema",
							"default": "",
							"examples": [
								"This is the description of the service"
							],
							"pattern": "^(.*)$"
						},
						"access_link": {
							"$id": "#/properties/data/properties/attributes/properties/access_links",
							"type": "string",
              "format": "uri-reference",
							"title": "The Access Link Schema",
							"default": "",
							"examples": [
								"https://example.com/theservice",
								"/theservice"
							]
						},
						"intended_audience": {
							"$id": "#/properties/data/properties/attributes/properties/intended_audience",
							"type": "array",
              "items": [
                { "type": "string" }
              ],
							"title": "The Intended Audience Schema",
							"default": "",
							"examples": [
                "Alumni",
                "Faculty",
                "Graduate students",
                "Instructors",
                "Visiting scholars"
							],
							"pattern": "^(.*)$"
						},
						"category": {
							"$id": "#/properties/data/properties/attributes/properties/service_category",
							"type": "string",
							"title": "The Service Category Schema",
							"default": "",
							"examples": [
                "Publishing Services"
							],
							"pattern": "^(.*)$"
            },
						"hours": {
							"$id": "#/properties/data/properties/attributes/properties/hours",
							"type": "string",
							"title": "The Hours Schema",
							"default": "",
							"examples": [
                ""
							],
							"pattern": "^(.*)$"
            },
						"add_to_footer": {
							"$id": "#/properties/data/properties/attributes/properties/add_to_footer",
							"type": "boolean",
							"title": "The Add to Footer Schema",
							"default": "",
							"examples": [
                true,
                false
							]
						}
					}
				}
			}
		}
	}
}
